  "description": "Mahjong score calculator",
  "scripts": {
    "build": "cross-env NODE_ENV='production' TS_NODE_PROJECT='tsconfig.webpack.json' webpack",
    "lint": "eslint 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.webpack.json && tsc --noEmit",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' webpack.config.ts && tsc --noEmit --project tsconfig.webpack.json && tsc --noEmit",
    "stylelint": "stylelint 'src/**/*.scss'",
    "stylelint:fix": "stylelint --fix 'src/**/*.scss'",
    "start": "cross-env TS_NODE_PROJECT='tsconfig.webpack.json' webpack serve",
    "postinstall": "husky install"
  },
  "keywords": [],
  "author": "livewing.net <dev@livewing.net> (https://livewing.net/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gssequence/mahjong-calc.git"
  },
  "bugs": {
    "url": "https://github.com/gssequence/mahjong-calc/issues"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.scss": "stylelint --fix"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^6.4.0",
